<resources>
    <!-- Base application theme. -->
    <style name="Theme.Kinolar" parent="Theme.MaterialComponents.Light">

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@color/color_black_light</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:navigationBarColor">@color/transparent</item>
    </style>


    <!--region StyreneAlcRegular-->
    <style name="TextAppearance.StyreneAlcRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/styrene_alc_regular</item>
    </style>

    <style name="TextAppearance.StyreneAlcRegular.White.16sp" parent="TextAppearance.GillSansMTSemiBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.StyreneAlcRegular.White.14sp" parent="TextAppearance.StyreneAlcRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--endregion-->


    <!--region StyreneAlcBold-->
    <style name="TextAppearance.StyreneAlcBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/styrene_alc_bold</item>
    </style>

    <style name="TextAppearance.StyreneAlcBold.White.16sp" parent="TextAppearance.StyreneAlcBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--endregion-->


    <!--region GillSansMTSemiBold-->
    <style name="TextAppearance.GillSansMTSemiBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gill_sans_mt_semi_bold</item>
    </style>

    <style name="TextAppearance.GillSansMTSemiBold.ColorRed.18sp" parent="TextAppearance.GillSansMTSemiBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_red</item>
    </style>
    <!--endregion-->


    <!--region GillSansMTBold-->
    <style name="TextAppearance.GillSansMTBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gill_sans_mt_bold</item>
    </style>

    <style name="TextAppearance.GillSansMTBold.White.21sp" parent="TextAppearance.GillSansMTBold">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--endregion-->


</resources>